<div class="banner">
  <div class="container">
    <h1 class="text-center"><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container" style="margin-top: -50px;">
  <div class="row">
    <div class="col-8">
      <div class="card">
        <div class="card-body">
          <!-- <h4 class="card-title">Description</h4> -->
          <div class="card-content">
            <p><%= @cocktail.description ? @cocktail.description : 'no'%></p>
          </div>
        </div>
      </div>

      <div class="card mt-3">
        <div class="card-body">
          <h4 class="card-title">Doses</h4>
          <div class="card-content">
            <ul>
              <% @cocktail.doses.each do |dose| %>
                <li><%= dose.description %> of <%= dose.ingredient.name %></li>
              <% end %>
            </ul>
            <div class="text-right">
              <%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-outline-primary rounded-pill'%>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Ingredients</h4>
          <div class="card-content">
            <ul>
              <% @cocktail.ingredients.each do |ingredient| %>
                <li><%= ingredient.name %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="text-right mt-3">
        <%= link_to 'Back', cocktails_path, class: 'btn btn-outline-danger rounded-pill' %>
      </div>
    </div>
  </div>

</div>


  <div class="mt-3">
  </div>
</div>
