<div class="banner banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
    <div class="container">
        <h1 class="text-center">
            <%= @cocktail.name %>
        </h1>
    </div>
</div>
<div class="container" style="margin-top: -50px;">
    <div class="row">
        <div class="col-8">
            <div class="card">
                <div class="card-body">
                    <!-- <h4 class="card-title">Description</h4> -->
                    <div class="card-content">
                        <p>
                            <%= @cocktail.description ? @cocktail.description : 'Do description. But you can add one ‚≠êÔ∏èüçπ'%>
                        </p>
                    </div>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-body">
                    <h4 class="card-title">Doses</h4>
                    <div class="card-content">
                        <% if @cocktail.doses.empty? %>
                        <p>Cocktail has no doses. But you can add some üëç</p>
                        <% else %>
                        <ul>
                            <% @cocktail.doses.each do |dose| %>
                            <li>
                                <%= dose.description %> of
                                <%= dose.ingredient.name %>
                            </li>
                            <%= link_to cocktail_dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                            <i class="fa fa-trash destroy_dose"></i>
                            <% end %>
                            <% end %>
                        </ul>
                        <% end %>
                        <div class="text-right">
                            <%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-outline-primary rounded-pill'%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Ingredients</h4>
                    <div class="card-content">
                        <% if @cocktail.ingredients.empty? %>
                        <p>üí° Add doses to create ingredients</p>
                        <% else %>
                        <ul>
                            <% @cocktail.ingredients.each do |ingredient| %>
                            <li>
                                <%= ingredient.name %>
                            </li>
                            <% end %>
                        </ul>
                        <% end -%>
                    </div>
                </div>
            </div>
            <div class="text-right mt-3">
                <%= link_to 'Back', cocktails_path, class: 'btn btn-outline-danger rounded-pill' %>
            </div>
        </div>
    </div>
</div>
