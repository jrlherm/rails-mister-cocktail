<div class="container">
  <div class="row">
    <h1 class="text-center mt-3">All cocktails</h1>
  </div>

  <div class="row">
    <ul>
      <% @cocktails.each do | cocktail | %>
        <li>
          <%= link_to cocktail.name, cocktail_path(cocktail)  %>
        </li>
      <% end %>
    </ul>
  </div>

  <%= link_to 'Add a new cocktail', new_cocktail_path, class: "btn btn-primary" %>
</div>
